include ../../form-unit-header/form-unit-header
include ../../checkbox-button/checkbox-button
include ../../radio-button/radio-button
include ../../toggle/toggle
include ../../like-button/like-button
include ../../rate-button/rate-button
include ../../range-slider/range-slider
include ../../button/button
include ../../pagination/pagination

mixin form-elements-section__buttons(options)
  //- options = {options, mods=["mod1", "mod2", ...]}

  -
    let unitClassName = 'form-elements-section__buttons';

    //- Add modifiers to class name
    if ( Object.hasOwn(options, 'mods') && options.mods) {
      //- If modifiers were passed to mixin
      options.mods.forEach((element) => {
        unitClassName += ` form-elements-section__buttons_${element}`;
      });
    }

  div(class=unitClassName)&attributes(attributes)
    .form-elements-section__buttons-column
      .form-elements-section__checkbox-buttons.form-elements-section__buttons-form-unit
        +form-unit-header({title:'Checkbox Buttons', subtitle:''})
        .form-elements-section__checkbox-buttons-body
          +checkbox-button({label: 'Можно курить'})
          +checkbox-button({label: 'Можно с питомцами', isChecked: true})
          +checkbox-button({label: 'Можно пригласить гостей (до 10 человек)', isChecked: true})
      .form-elements-section__radio-buttons.form-elements-section__buttons-form-unit
        +form-unit-header({title:'Radio Buttons', subtitle:''})
        .form-elements-section__radio-buttons-body
          +radio-button({label: 'Мужчина', name: 'gender', value: 'male', isChecked: true})
          +radio-button({label: 'Женщина', name: 'gender', value: 'female'}) 
      .form-elements-section__toggle.form-elements-section__buttons-form-unit
        +form-unit-header({title:'Toggle', subtitle:''})
        .form-elements-section__toggle-body
          +toggle({label: 'Получать спецпредложения', name: '', value: '', isChecked: true})
          +toggle({label: 'Получать спецпредложения', name: '', value: ''})
      .form-elements-section__like-button.form-elements-section__buttons-form-unit
        +form-unit-header({title:'Like button', subtitle:''})
        .form-elements-section__like-button-body
          +like-button({defaultValue: 2})
          +like-button({defaultValue: 12, mods: ['checked']})
      .form-elements-section__rate-button.form-elements-section__buttons-form-unit
        +form-unit-header({title:'rate button', subtitle:''})
        .form-elements-section__rate-button-body
          +rate-button({value: 4, isActive: true})
          +rate-button({value: 5, isActive: true})
    .form-elements-section__buttons-column
      +range-slider({title: 'range slider', subtitle:''})
      .form-elements-section__buttons.form-elements-section__buttons-form-unit
        +form-unit-header({title: 'buttons', subtitle: ''})
        .form-elements-section__click-buttons
          .form-elements-section__click-buttons-row
            +button({text: 'Click me'}).button_type_cta.button_bg_filled.button_cta-secondary
            +button({text: 'Click me'}).button_type_cta.button_bg_filled.button_cta-secondary.button_hovered
          .form-elements-section__click-buttons-row
            +button({text: 'Click me'}).button_type_cta.button_bg_ghost.button_cta-secondary
            +button({text: 'Click me'}).button_type_cta.button_bg_ghost.button_cta-secondary.button_ghost-hovered
          .form-elements-section__click-buttons-row
            +button({text: 'Click me'}).button_type_text
            +button({text: 'Click me'}).button_type_text
          .form-elements-section__click-buttons-row
            +button({text: 'перейти к оплате'}).button_type_cta.button_bg_filled.button_cta-primary
      .form-elements-section__pagination.form-elements-section__buttons-form-unit
        +form-unit-header({title: 'pagination', subtitle: ''})
        +pagination({})
