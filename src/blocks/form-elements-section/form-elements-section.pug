include ../layout/layout
include ../form-unit/form-unit
include __fields/form-elements-section__fields
include __buttons/form-elements-section__buttons
include __dropdowns/form-elements-section__dropdowns
include __lists/form-elements-section__lists

mixin form-elements-section(options)
  //- options = {options, mods=["mod1", "mod2", ...]}

  -
    let unitClassName = 'form-elements-section';

    //- Add modifiers to class name
    if ( Object.hasOwn(options, 'mods') && options.mods) {
      //- If modifiers were passed to mixin
      options.mods.forEach((element) => {
        unitClassName += ` form-elements-section_${element}`;
      });
    }

  section(class=unitClassName)&attributes(attributes)
    +layout({})
      .form-elements-section__content
        .form-elements-section__row
          .form-elements-section__column
            +form-elements-section__fields({})
          .form-elements-section__column
            +form-elements-section__buttons({})
        +form-elements-section__dropdowns({})
        +form-elements-section__lists({})
